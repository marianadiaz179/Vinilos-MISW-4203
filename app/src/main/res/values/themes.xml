<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vinilos_MISW4203" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/verde_oscuro_1</item>
        <item name="colorPrimaryVariant">@color/verde_oscuro_2</item>
        <item name="colorOnPrimary">@color/blanco</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/verde_oscuro_3</item>
        <item name="actionBarTheme">@style/ActionBarLeftAligned</item>
    </style>

    <!-- Estilo para la alineación del título a la izquierda. -->
    <style name="ActionBarLeftAligned">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:gravity">start</item>
    </style>

    <style name="Theme.Vinilos_MISW4203.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>